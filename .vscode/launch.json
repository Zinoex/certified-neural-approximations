{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dynamics Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_dynamics_models.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "1D Model Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_1D_model.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "2D Sine Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_dynamics_models.py",
            "args": ["-k", "test_sine2d_system"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}
